<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="base_font_style">
        <item name="fontFamily">sans-serif</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="text_size_0" parent="base_font_style">
        <item name="android:textAlignment">center</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="text_size_0_white" parent="base_font_style">
        <item name="android:textAlignment">center</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="text_size_0_blue" parent="base_font_style">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/header</item>
    </style>

    <style name="text_size_1_bold" parent="base_font_style">
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text_size_1" parent="base_font_style">
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="text_size_1.5" parent="base_font_style">
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">normal</item>
    </style>
    <style name="text_size_1_italic" parent="base_font_style">
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="text_size_2_bold" parent="base_font_style">
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text_size_2.5" parent="base_font_style">
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="text_size_2.5_bold" parent="base_font_style">
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text_size_2" parent="base_font_style">
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="text_size_3_bold" parent="base_font_style">
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text_size_4_white" parent="text_size_0_white">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">30sp</item>
    </style>


    <style name="button">
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@drawable/button_round_corner</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="button_back">
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_width">40dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:drawableEnd">@drawable/ic_baseline_arrow_back_ios_24</item>
    </style>

    <style name="card_view">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="cardCornerRadius">10dp</item>
        <item name="cardElevation">0dp</item>
        <item name="cardBackgroundColor">@color/header</item>

    </style>

    <style name="edit_text_outlined" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textSize">12sp</item>
        <item name="colorControlNormal">@color/black</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:inputType">textCapWords</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@drawable/edit_text_background</item>
        <item name="android:scrollHorizontally">true</item>
    </style>

    <style name="edit_text_outlined_gray" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textSize">12sp</item>
        <item name="colorControlNormal">@color/black</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:inputType">textCapWords</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@drawable/edit_text_background_gray</item>
        <item name="android:scrollHorizontally">true</item>
    </style>

    <style name="layout_linear_vertical">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="default_text">
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="title_text" parent="default_text">
        <item name="fontFamily">sans-serif-black</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="linear_layout_vertical">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="scroll_layout_main">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:fillViewport">true</item>
        <item name="android:scrollbars">none</item>
    </style>

    <style name="card_view_square">
        <item name="cardCornerRadius">0dp</item>
        <item name="cardElevation">0dp</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="linear_layout_horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="text_view_normal">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="text_view_relative_layout_card_first" parent="text_view_normal">
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:padding">0dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">10sp</item>

    </style>

    <style name="button_card">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:textSize">10sp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:background">@drawable/button_rounded_corner</item>
    </style>


</resources>