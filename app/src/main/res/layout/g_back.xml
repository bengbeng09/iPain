<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Guest.GuestBackFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/btn_front_figure"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="10dp"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_baseline_keyboard_double_arrow_left_24"
                app:layout_constraintBottom_toBottomOf="@id/body_figure"
                app:layout_constraintTop_toTopOf="@id/body_figure"
                app:layout_constraintStart_toStartOf="parent" />


            <ImageView
                android:id="@+id/body_figure"
                android:layout_width="match_parent"
                android:layout_height="600dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_gravity="center"
                android:src="@drawable/body_figure_back" />

            <ImageButton
                android:id="@+id/btn_lower_back"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginTop="220dp"
                android:layout_marginEnd="15dp"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_baseline_mode_standby_24"
                app:layout_constraintTop_toTopOf="@id/body_figure"
                app:layout_constraintEnd_toEndOf="@id/body_figure"
                app:layout_constraintStart_toStartOf="@id/body_figure"/>

            <ImageButton
                android:id="@+id/btn_middle_upper_back"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginTop="120dp"
                android:layout_marginEnd="15dp"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_baseline_mode_standby_24"
                app:layout_constraintTop_toTopOf="@id/body_figure"
                app:layout_constraintEnd_toEndOf="@id/body_figure"
                app:layout_constraintStart_toStartOf="@id/body_figure"/>

            <ImageButton
                android:id="@+id/btn_right_upper_back"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginTop="140dp"
                android:layout_marginStart="105dp"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_baseline_mode_standby_24"
                app:layout_constraintTop_toTopOf="@id/body_figure"
                app:layout_constraintEnd_toEndOf="@id/body_figure"
                app:layout_constraintStart_toStartOf="@id/body_figure"/>

            <ImageButton
                android:id="@+id/btn_left_upper_back"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginTop="140dp"
                android:layout_marginEnd="140dp"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_baseline_mode_standby_24"
                app:layout_constraintTop_toTopOf="@id/body_figure"
                app:layout_constraintEnd_toEndOf="@id/body_figure"
                app:layout_constraintStart_toStartOf="@id/body_figure"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</FrameLayout>