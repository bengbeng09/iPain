<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp">

        <Button
            android:layout_width="30dp"
            android:paddingStart="7dp"
            android:id="@+id/btn_back"
            android:drawableEnd="@drawable/ic_baseline_arrow_back_ios_24"
            android:background="?android:attr/selectableItemBackground"
            android:layout_height="30dp"/>

    </LinearLayout>

    <ScrollView
        style="@style/scroll_layout_main">

        <LinearLayout
            style="@style/linear_layout_vertical"
            android:padding="16dp">

            <TextView
                style="@style/text_size_2_bold"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:layout_marginBottom="20dp"
                android:text="PROOF OF COMPLETION" />

            <LinearLayout
                android:id="@+id/container_images"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                />

            <Button
                android:id="@+id/btn_upload"
                android:background="@color/white"
                android:layout_marginTop="10dp"
                android:layout_marginStart="30dp"
                android:layout_marginBottom="20dp"
                android:layout_marginEnd="30dp"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:gravity="center"
                android:text="SELECT IMAGE/S "
                android:layout_height="wrap_content">

            </Button>

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <Button
            android:id="@+id/btn_submit"
            android:background="@color/header"
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SUBMIT"/>

    </LinearLayout>

</LinearLayout>