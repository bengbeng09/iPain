<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".Dialog.DialogChangePass">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:orientation="vertical">

        <Button
            android:layout_width="30dp"
            android:id="@+id/btn_back"
            android:drawableEnd="@drawable/ic_baseline_arrow_back_ios_24"
            android:background="?android:attr/selectableItemBackground"
            android:layout_marginBottom="20dp"
            android:layout_height="30dp"/>

        <TextView
            style="@style/text_size_2_bold"
            android:layout_marginBottom="20dp"
            android:text="CHANGE PASSWORD" />

        <TextView
            style="@style/text_size_0"
            android:textAlignment="textStart"
            android:layout_marginTop="10dp"
            android:layout_marginStart="5dp"
            android:text="Current Password:"/>

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_current_password"
            style="@style/edit_text_outlined"
            android:inputType="textPassword"
            android:paddingLeft="10dp"
            android:layout_gravity="center_horizontal"/>

        <TextView
            style="@style/text_size_0"
            android:textAlignment="textStart"
            android:layout_marginTop="10dp"
            android:layout_marginStart="5dp"
            android:text="New Password:"/>

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_new_password"
            style="@style/edit_text_outlined"
            android:paddingLeft="10dp"
            android:inputType="textPassword"
            android:layout_gravity="center_horizontal"/>

        <TextView
            style="@style/text_size_0"
            android:textAlignment="textStart"
            android:layout_marginTop="10dp"
            android:layout_marginStart="5dp"
            android:text="Re-type New Password:"/>

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_retype_new_password"
            style="@style/edit_text_outlined"
            android:paddingLeft="10dp"
            android:inputType="textPassword"
            android:layout_gravity="center_horizontal" />

        <Button
            style="@style/button"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp"
            android:id="@+id/btn_submit"
            android:text="SUBMIT"/>

    </LinearLayout>
</LinearLayout>