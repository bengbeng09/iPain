<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/linear_layout_vertical"
    tools:context=".Dialog.TDialogProof">

    <ScrollView
        style="@style/scroll_layout_main">

        <LinearLayout
            style="@style/linear_layout_vertical">

            <TextView
                android:layout_marginTop="40dp"
                style="@style/text_size_2_bold"
                android:visibility="visible"
                android:id="@+id/tv_proof"
                android:text="PROOF OF COMPLETION"
                android:textColor="@color/black" />

            <LinearLayout
                android:id="@+id/container_proof"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="40dp"
                android:layout_marginBottom="40dp"
                android:layout_marginStart="40dp"
                style="@style/layout_linear_vertical">

            </LinearLayout>
        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <Button
            android:id="@+id/btn_ok"
            android:background="@color/header"
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="OK"/>

    </LinearLayout>

</LinearLayout>