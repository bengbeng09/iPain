<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".Guest.GuestActivity">

    <LinearLayout
        style="@style/linear_layout_vertical"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp">

        <Button
            android:layout_width="30dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"
            android:id="@+id/btn_back"
            android:drawableEnd="@drawable/ic_baseline_arrow_back_ios_24"
            android:background="?android:attr/selectableItemBackground"
            android:layout_height="30dp"/>

        <TextView
            style="@style/text_size_1.5"
            android:id="@+id/text1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:text="@string/pain_intro"/>

        <TextView
            android:id="@+id/text2"
            style="@style/text_size_1"
            android:textColor="@color/common_google_signin_btn_text_light_default"
            app:layout_constraintTop_toBottomOf="@+id/text1"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:text="@string/pain_intro2"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/container_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="vertical">
            </LinearLayout>

        </ScrollView>

    </LinearLayout>


</LinearLayout>