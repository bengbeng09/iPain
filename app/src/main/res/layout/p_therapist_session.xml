<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/layout_1"
        android:padding="20dp"
        android:layout_marginStart="-1dp"
        android:layout_marginEnd="-1dp"
        android:layout_marginTop="-1dp"
        android:background="@drawable/background_border"
        style="@style/linear_layout_vertical">

        <Button
            android:layout_width="30dp"
            android:paddingLeft="7dp"
            android:id="@+id/btn_back"
            android:layout_alignParentTop="true"
            android:drawableEnd="@drawable/ic_baseline_arrow_back_ios_24"
            android:background="?android:attr/selectableItemBackground"
            android:layout_height="30dp"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content">

            <ImageView
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:id="@+id/img_therapist_profile"
                android:scaleType="centerCrop"
                android:layout_gravity="center"
                android:src="@drawable/ic_baseline_account_circle_24"
                android:layout_width="60dp"
                android:layout_height="60dp"/>

            <LinearLayout
                style="@style/linear_layout_vertical"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/img_therapist_profile">

                <TextView
                    android:id="@+id/tv_therapist_clinic"
                    style="@style/title_text"
                    android:textAlignment="textStart"
                    android:layout_marginStart="10dp"
                    android:text="ST LUKE MEDICAL CLINIC"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/tv_therapist_name"
                    style="@style/text_size_1"
                    android:textAlignment="textStart"
                    android:layout_marginStart="10dp"
                    android:text="Dr. Viola M. De Guzman"
                    android:textColor="@color/black" />

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

    <ScrollView
        android:layout_below="@id/layout_1"
        style="@style/scroll_layout_main">
        <LinearLayout
            android:paddingBottom="40dp"
            style="@style/linear_layout_vertical">

            <TextView
                android:layout_marginTop="20dp"
                android:visibility="gone"
                android:id="@+id/tv_pending"
                style="@style/text_size_1.5"
                android:textAlignment="center"
                android:layout_marginStart="5dp"
                android:text="PENDING TASKS"
                android:textColor="@color/black" />

            <LinearLayout
                android:id="@+id/container_incomplete"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="40dp"
                android:layout_marginStart="40dp"
                style="@style/layout_linear_vertical">

            </LinearLayout>

            <TextView
                android:visibility="gone"
                android:id="@+id/tv_completed"
                android:layout_marginTop="20dp"
                style="@style/text_size_1.5"
                android:textAlignment="center"
                android:layout_marginStart="5dp"
                android:text="COMPLETED TASKS"
                android:textColor="@color/black" />

            <LinearLayout
                android:id="@+id/container_completed"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="40dp"
                android:layout_marginStart="40dp"
                style="@style/layout_linear_vertical">

            </LinearLayout>

        </LinearLayout>



    </ScrollView>


</RelativeLayout>