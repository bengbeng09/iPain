<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="15dp"
    android:orientation="vertical"
    tools:context=".Guest.GuestExerciseSession">

    <Button
        android:layout_width="30dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/btn_back"
        android:drawableEnd="@drawable/ic_baseline_arrow_back_ios_24"
        android:background="?android:attr/selectableItemBackground"
        android:layout_height="30dp"/>

    <ScrollView
        style="@style/scroll_layout_main"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginEnd="20dp"
            android:paddingBottom="20dp"
            android:layout_marginStart="20dp">

            <TextView
                style="@style/text_size_3_bold"
                android:id="@+id/tv_exercise"
                android:layout_marginBottom="10dp"
                android:text=""/>

            <ImageView
                android:layout_width="match_parent"
                android:scaleType="fitCenter"
                android:layout_height="290dp"
                android:layout_marginBottom="20dp"
                android:id="@+id/exercise_image" />

            <TextView
                style="@style/text_size_1.5"
                android:id="@+id/tv_exercise_how"
                android:lineSpacingMultiplier="1.2"
                android:textAlignment="textStart"
                android:justificationMode="inter_word"
                android:layout_marginBottom="40dp"
                android:text=""/>

            <TextView
                style="@style/text_size_1.5"
                android:textAlignment="textStart"
                android:layout_marginBottom="10dp"
                android:text="Repetition:"/>

            <TextView
                style="@style/text_size_1.5"
                android:id="@+id/tv_exercise_session"
                android:lineSpacingMultiplier="1.2"
                android:textAlignment="textStart"
                android:text=""/>

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:orientation="vertical">

        <Button
            style="@style/button"
            android:layout_weight="0"
            android:layout_marginStart="100dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="100dp"
            android:layout_gravity="bottom"
            android:id="@+id/btn_done"
            android:text="DONE"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                style="@style/text_size_1"
                android:layout_width="wrap_content"
                android:textAlignment="textStart"
                android:text="Press "/>

            <TextView
                style="@style/text_size_1"
                android:layout_width="wrap_content"
                android:textAlignment="textStart"
                android:textColor="@color/header"
                android:text="DONE"/>

            <TextView
                style="@style/text_size_1"
                android:layout_width="wrap_content"
                android:textAlignment="textStart"
                android:text=" if you already finish the exercise "/>

        </LinearLayout>

    </LinearLayout>

</androidx.appcompat.widget.LinearLayoutCompat>