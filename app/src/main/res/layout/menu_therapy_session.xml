<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".Patient.PMenuTherapySession">

    <LinearLayout
        style="@style/linear_layout_vertical"
        android:layout_marginBottom="150dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp">

        <TextView
            style="@style/text_size_2_bold"
            android:text="Welcome, First_Name" />
        <TextView
            style="@style/text_size_1_italic"
            android:text="@string/therapist_session_1"/>

        <TextView
            android:layout_marginTop="60dp"
            android:textColor="@color/red_text"
            style="@style/text_size_1_bold"
            android:text="@string/therapist_session_2"/>

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_username"
            style="@style/edit_text_outlined"
            android:layout_marginTop="10dp"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:paddingLeft="10dp"
            android:layout_gravity="center_horizontal" />

        <Button
            style="@style/button"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:layout_marginStart="80dp"
            android:layout_marginEnd="80dp"
            android:id="@+id/btn_submit"
            android:text="SUBMIT"/>

    </LinearLayout>



</LinearLayout>