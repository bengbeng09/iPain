<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Dialog.PDialogAddActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp">

        <Button
            android:layout_width="30dp"
            android:paddingLeft="7dp"
            android:id="@+id/btn_back"
            android:drawableEnd="@drawable/ic_baseline_arrow_back_ios_24"
            android:background="?android:attr/selectableItemBackground"
            android:layout_height="30dp"/>


    </LinearLayout>

    <ScrollView
        style="@style/scroll_layout_main">

        <LinearLayout
            style="@style/linear_layout_vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    style="@style/text_size_0"
                    android:textAlignment="textStart"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="5dp"
                    android:text="Activity Name:"/>

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_activity_name"
                    style="@style/edit_text_outlined_gray"
                    android:paddingLeft="10dp"
                    android:layout_gravity="center_horizontal"
                    android:tooltipText="Username" />


                <ImageView
                    android:layout_marginTop="30dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp"
                    android:id="@+id/image_view"
                    android:layout_width="match_parent"
                    android:background="#D9D9D9"
                    android:layout_height="150dp">
                </ImageView>

                <Button
                    android:id="@+id/btn_upload"
                    android:background="#4F4F4F"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginEnd="30dp"
                    android:textColor="@color/white"
                    android:layout_width="match_parent"
                    android:layout_gravity="center"
                    android:text="UPLOAD"
                    android:layout_height="wrap_content">

                </Button>



                <TextView
                    style="@style/text_size_0"
                    android:textAlignment="textStart"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="5dp"
                    android:text="Repetition:"/>

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_repetition"
                    style="@style/edit_text_outlined_gray"
                    android:paddingLeft="10dp"
                    android:layout_gravity="center_horizontal"
                    android:tooltipText="Username" />
                <TextView
                    style="@style/text_size_0"
                    android:textAlignment="textStart"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="5dp"
                    android:text="Hold:"/>

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_hold"
                    style="@style/edit_text_outlined_gray"
                    android:paddingLeft="10dp"
                    android:layout_gravity="center_horizontal"
                    android:tooltipText="Username" />
                <TextView
                    style="@style/text_size_0"
                    android:textAlignment="textStart"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="5dp"
                    android:text="Complete:"/>

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_complete"
                    style="@style/edit_text_outlined_gray"
                    android:paddingLeft="10dp"
                    android:layout_gravity="center_horizontal"
                    android:tooltipText="Username" />
                <TextView
                    style="@style/text_size_0"
                    android:textAlignment="textStart"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="5dp"
                    android:text="Link:"/>

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_link"
                    style="@style/edit_text_outlined_gray"
                    android:paddingLeft="10dp"
                    android:layout_gravity="center_horizontal"
                    android:tooltipText="Username" />
                <TextView
                    style="@style/text_size_0"
                    android:textAlignment="textStart"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="5dp"
                    android:text="Therapistâ€™s Notes:"/>

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_notes"
                    style="@style/edit_text_outlined_gray"
                    android:paddingTop="10dp"
                    android:paddingLeft="10dp"
                    android:layout_height="200dp"
                    android:gravity="top|start"
                    android:layout_marginBottom="40dp"
                    android:tooltipText="Username" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <Button
                    android:id="@+id/btn_add"
                    android:background="@color/header"
                    android:textColor="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="SUBMIT"/>

            </LinearLayout>

        </LinearLayout>



    </ScrollView>

</LinearLayout>