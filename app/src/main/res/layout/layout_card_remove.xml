<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <androidx.cardview.widget.CardView style="@style/card_view_square">

        <LinearLayout
            style="@style/linear_layout_horizontal"
            android:layout_height="wrap_content"
            android:background="@drawable/background_border">

            <TextView
                android:id="@+id/name"
                style="@style/text_view_relative_layout_card_first"
                android:layout_width="0dp"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:gravity="center|start"
                android:maxLines="2"
                android:text=""
                android:textSize="11sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnRemove"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:backgroundTint="@color/remove_btn"
                android:text="REMOVE"
                android:textColor="@color/white"
                android:textSize="11sp"
                android:visibility="visible" />

            <Button
                android:id="@+id/btnView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:backgroundTint="@color/header"
                android:text="VIEW"
                android:textColor="@color/white"
                android:textSize="11sp" />

        </LinearLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>