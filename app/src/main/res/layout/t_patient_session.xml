<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Therapist.TPatientSessionActivity">


    <LinearLayout
        android:id="@+id/layout_1"
        android:padding="20dp"
        android:layout_marginStart="-1dp"
        android:layout_marginEnd="-1dp"
        android:layout_marginTop="-1dp"
        android:background="@drawable/background_border"
        style="@style/linear_layout_vertical">
        <Button
            android:layout_width="30dp"
            android:paddingLeft="7dp"
            android:id="@+id/btn_back"
            android:layout_alignParentTop="true"
            android:drawableEnd="@drawable/ic_baseline_arrow_back_ios_24"
            android:background="?android:attr/selectableItemBackground"
            android:layout_height="30dp"/>

        <TextView
            android:id="@+id/tv_session_name"
            style="@style/title_text"
            android:textAlignment="textStart"
            android:layout_marginStart="5dp"
            android:layout_below="@+id/btn_back"
            android:layout_marginTop="20dp"
            android:text="NAME"
            android:textColor="@color/black" />
        <TextView
            android:id="@+id/tv_session_id"
            style="@style/text_size_1"
            android:textAlignment="textStart"
            android:layout_marginStart="5dp"
            android:layout_below="@+id/tv_session_name"
            android:text="#69420"
            android:textColor="@color/black" />
    </LinearLayout>



    <ScrollView
        android:layout_below="@id/layout_1"
        android:layout_marginBottom="20dp"
        style="@style/scroll_layout_main">

        <LinearLayout
            android:paddingBottom="40dp"
            style="@style/linear_layout_vertical">

            <TextView
                android:layout_marginTop="20dp"
                android:visibility="gone"
                android:id="@+id/tv_given"
                style="@style/text_size_1.5"
                android:textAlignment="center"
                android:layout_marginStart="5dp"
                android:text="GIVEN TASKS"
                android:textColor="@color/black" />

            <LinearLayout
                android:id="@+id/container_given"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="40dp"
                android:layout_marginStart="40dp"
                style="@style/layout_linear_vertical">

            </LinearLayout>

            <TextView
                android:visibility="gone"
                android:id="@+id/tv_completed"
                android:layout_marginTop="20dp"
                style="@style/text_size_1.5"
                android:textAlignment="center"
                android:layout_marginStart="5dp"
                android:text="COMPLETED TASKS"
                android:textColor="@color/black" />

            <LinearLayout
                android:id="@+id/container_completed"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="40dp"
                android:layout_marginStart="40dp"
                style="@style/layout_linear_vertical">

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btn_add_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="@color/header"
        android:clickable="true"
        android:elevation="3dp"
        android:focusable="true"
        android:src="@drawable/ic_baseline_add_24"
        app:borderWidth="0dp"
        app:fabSize="normal" />

</RelativeLayout>