<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/linear_layout_vertical"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Patient.PTasksActivity">

    <Button
        android:layout_margin="20dp"
        android:layout_width="30dp"
        android:paddingLeft="7dp"
        android:id="@+id/btn_back"
        android:layout_alignParentTop="true"
        android:drawableEnd="@drawable/ic_baseline_arrow_back_ios_24"
        android:background="?android:attr/selectableItemBackground"
        android:layout_height="30dp"/>

    <ScrollView
        style="@style/scroll_layout_main">

        <LinearLayout
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            style="@style/layout_linear_vertical">

            <TextView
                android:id="@+id/tv_activity_name"
                style="@style/text_size_2_bold"
                android:text="EXERCISE"/>

            <ImageView
                android:layout_marginTop="30dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:scaleType="fitCenter"
                android:id="@+id/image_view"
                android:src="@drawable/ic_baseline_directions_run_24"
                android:layout_width="match_parent"
                android:background="@color/gray"
                android:layout_height="200dp">
            </ImageView>

            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                style="@style/linear_layout_horizontal">

                <TextView
                    style="@style/text_size_2.5_bold"
                    android:textAlignment="textStart"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="Repeat:"/>`

                <TextView
                    android:id="@+id/tv_repeat"
                    style="@style/text_size_2.5_bold"
                    android:textAlignment="textEnd"
                    android:textColor="@color/red_text"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="3 times"/>

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                style="@style/linear_layout_horizontal">

                <TextView
                    style="@style/text_size_2.5_bold"
                    android:textAlignment="textStart"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="Hold:"/>

                <TextView
                    android:id="@+id/tv_hold"
                    style="@style/text_size_2.5_bold"
                    android:textAlignment="textEnd"
                    android:textColor="@color/red_text"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="30 Seconds"/>

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                style="@style/linear_layout_horizontal">

                <TextView

                    style="@style/text_size_2.5_bold"
                    android:textAlignment="textStart"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="Complete:"/>

                <TextView
                    android:id="@+id/tv_complete"
                    style="@style/text_size_2.5_bold"
                    android:textAlignment="textEnd"
                    android:textColor="@color/red_text"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="1 Set"/>

            </LinearLayout>

            <TextView
                android:layout_marginTop="40dp"
                style="@style/text_size_1"
                android:text="@string/link"/>

            <androidx.cardview.widget.CardView
                style="@style/card_view_square"
                android:id="@+id/card_link"
                app:cardCornerRadius="15dp"
                app:cardElevation="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:backgroundTint="#40AAF4">

                <TextView
                    android:layout_margin="20dp"
                    android:id="@+id/tv_link"
                    style="@style/text_size_1"
                    android:text="wwww.samplelink.com"/>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                style="@style/card_view_square"
                android:id="@+id/card_notes"
                app:cardCornerRadius="15dp"
                app:cardElevation="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="80dp"
                android:backgroundTint="@color/notes">

                <LinearLayout
                    android:layout_margin="20dp"
                    style="@style/linear_layout_vertical">
                    <TextView
                        style="@style/text_size_2_bold"
                        android:layout_marginBottom="10dp"
                        android:text="THERAPIST NOTES"/>

                    <TextView
                        android:id="@+id/tv_note"
                        style="@style/text_size_1"
                        android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an unknown printer took a galley of type and scrambled it to make a type specimen book. It has survived not only five centuries"/>
                </LinearLayout>

            </androidx.cardview.widget.CardView>


        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <Button
            android:id="@+id/btn_finish"
            android:background="@color/header"
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="FINISH"/>

    </LinearLayout>


</LinearLayout>